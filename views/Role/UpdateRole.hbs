<div class='container'>
  <div class='row justify-content-center'>
    <div class='col-12 col-lg-6'>
      <form id='roleUpdate' method='post'>
        <div class='row'>
          <div class='card'>
            <div class='card-header'>
              <h2 class='mb-0 text-center'><strong>Role</strong></h2>
            </div>
            <div class='card-body'>
              <h5 class='card-title mb-2'>Role Name</h5>
              <div id='error-message' style='color: red; display: none;'>Please
                fill out all fields before submitting the form.</div>
              <div class='text-center mb-3'>
                <input
                  type='text'
                  name='name'
                  value='{{role.name}}'
                  class='form-control'
                  placeholder='Role Name'
                />
              </div>
              <div class='text-center'>
                <input type='submit' value='Submit' class='btn btn-secondary' />
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<script
  src='https://cdnjs.cloudflare.com/ajax/libs/axios/0.18.0/axios.min.js'
></script>
<script src='/assets/js/role/update.js'></script>