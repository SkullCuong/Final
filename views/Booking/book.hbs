<!-- ***** Header Area End ***** -->
<div class='main-banner' id='top' style='padding-bottom: 60px;'>
  <div class='container-fluid'>
    <div class='row justify-content-center'>
      <div class='col-md-4 col-xl-3'>
        <div class='card mb-2'>
          <div class='card-body text-center'>
            <img
              src='/images/1713107355328_a8f40d26dce3cc9dfa013c60b1bc758a.jpg'
              alt='Christina Mason'
              class='assets/images-fluid rounded-circle mb-2'
              width='128'
              height='128'
            />
            <h4 class='mb-0'>Room Name</h4>
            <div class='text-muted mb-0'>Room Floor</div>
            <div class='card-body'>
              <hr />
              <ul class='list-unstyled mb-0'>
                <li class='sidebar-item'>
                  <a class='profilebar-link active' href='/user/profile'>
                    <span class='align-middle'>Room Type</span>
                  </a>
                </li>
                <li class='sidebar-item'>
                  <a class='profilebar-link active' href='#'>
                    <span class='align-middle'>Room Capacity</span>
                  </a>
                </li>
                <li class='sidebar-item'>
                  <a class='profilebar-link active' href='/user/change'>
                    <span class='align-middle'>Room Price</span>
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <div class='col-md-4 col-xl-4'>
        <form method='post'>
          <div class='row'>
            <div class='card'>
              <div class='card-body'>
                <h3 class='mb-4'>Booking</h3>
                <!-- id -->
                <div class='text-center mb-2'>
                  <input
                    type='text'
                    name='id'
                    class='form-control'
                    placeholder='Check In'
                    value='{{id}}'
                    hidden
                  />
                </div>
                <!-- Check in -->
                <h5 class='card-title mb-2'>Check In</h5>
                <div class='text-center mb-4'>
                  <input
                    type='date'
                    name='checkIn'
                    class='form-control'
                    placeholder='Check In'
                  />
                </div>
                <!-- Check Out -->
                <h5 class='card-title mb-2'>Check Out</h5>
                <div class='text-center mb-4'>
                  <input
                    type='date'
                    name='checkout'
                    class='form-control'
                    placeholder='Check Out'
                  />
                </div>
                <!-- Room -->
                <h5 class='card-title mb-2'>Room</h5>
                <div class='text-center mb-5'>
                  <input
                    type='text'
                    name='roomId'
                    class='form-control'
                    placeholder='Check Out'
                    value='{{roomId}}'
                  />
                </div>
                <div class='text-center'>
                  <input
                    type='submit'
                    value='Update'
                    class='btn btn-secondary'
                  />
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>