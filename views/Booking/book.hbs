<div class='main-banner' id='top' style='padding-bottom: 60px;'>
  <div class='container-fluid'>
    <div class='row justify-content-center'>
      <div class='col-md-4 col-xl-3'>
        <div class='card mb-2'>
          <div class='card-body text-center'>
            <img
              src='/images/{{room.image_url}}'
              alt='Christina Mason'
              class='assets/images-fluid rounded-circle mb-2'
              width='128'
              height='128'
            />
            <h4 class='mb-0'>{{room.name}}</h4>
            <div class='text-muted mb-0'>{{room.floor}}</div>
            <div class='card-body'>
              <hr />
              <ul class='list-unstyled mb-0'>
                <li class='sidebar-item'>
                  <span class='align-middle'>Type : {{room.type}}</span>
                </li>
                <li class='sidebar-item'>
                    <span class='align-middle'>Capacity : {{room.capacity}}</span>
                  </a>
                </li>
                <li class='sidebar-item'>
                    <span class='align-middle'>Price : ${{room.price}}</span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <div class='col-md-4 col-xl-4'>
        <form id="bookingForm" method='post'>
          <div class='row'>
            <div class='card'>
              <div class='card-body'>
                <h3 class='mb-4'>Booking</h3>
                <!-- id -->
                <div class='text-center mb-2'>
                  <input
                    type='text'
                    name='id'
                    class='form-control'
                    placeholder='Check In'
                    value='{{id}}'
                    hidden
                  />
                </div>
                <h5 class='card-title mb-2'>Guest Name</h5>
                <div class='text-center mb-4'>
                  <input
                    value="{{username}}"
                    class='form-control'
                    readonly
                  />
                </div>
                <!-- Check in -->
                <h5 class='card-title mb-2'>Check In</h5>
                <div class='text-center mb-4'>
                  <input
                    type='date'
                    name='checkIn'
                    class='form-control'
                    placeholder='Check In'
                  />
                </div>
                <!-- Check Out -->
                <h5 class='card-title mb-2'>Check Out</h5>
                <div class='text-center mb-4'>
                  <input
                    type='date'
                    name='checkout'
                    class='form-control'
                    placeholder='Check Out'
                  />
                </div>
                <div class='text-center mb-5'>
                  <input
                    type='text'
                    name='roomId'
                    class='form-control'
                  
                    value='{{room.id}}'
                    hidden
                  />
                </div>
                <div id='error-message' style='color: red; display: none;'>Please
                fill out all fields before submitting the form.</div>
                <div class='text-center'>
                  <input
                    type='submit'
                    value='Update'
                    class='btn btn-secondary'
                  />
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script
  src='https://cdnjs.cloudflare.com/ajax/libs/axios/0.18.0/axios.min.js'
></script>
<script src='/assets/js/booking/booking.js'></script>
