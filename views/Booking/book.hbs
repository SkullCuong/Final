<div class='container'>
  <div class='row justify-content-center'>
    <div class='col-12 col-lg-6'>
      <form method='post'>
        <div class='row'>
          <div class='card'>
            <div class='card-header' style='background-color: white;'>
              <h3 class='mb-0 text-center'><strong>Booking</strong></h3>
            </div>
            <div class='card-body'>
              <div class='text-center mb-4'>
                <input
                  type='text'
                  name='id'
                  class='form-control'
                  placeholder='Check In'
                  value='{{id}}'
                  hidden
                />
              </div>
              <h5 class='card-title mb-2'>Check In</h5>
              <div class='text-center mb-4'>
                <input
                  type='date'
                  name='checkIn'
                  class='form-control'
                  placeholder='Check In'
                />
              </div>
              <h5 class='card-title mb-2'>Check Out</h5>
              <div class='text-center mb-4'>
                <input
                  type='date'
                  name='checkout'
                  class='form-control'
                  placeholder='Check Out'
                />
              </div>
              <h5 class='card-title mb-2'>Room</h5>
              <div class='text-center mb-4'>
                <input
                  type='text'
                  name='roomId'
                  class='form-control'
                  placeholder='Check Out'
                />
              </div>
              <div class='text-center'>
                <input type='submit' value='Submit' class='btn btn-secondary' />
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>