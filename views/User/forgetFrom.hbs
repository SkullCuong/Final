<form method='post'>
  <div class='row'>
    <div class='card'>
      <div class='card-body'>
        <!-- id -->
        <h5 class='card-title mb-2'>Wellcome {{user.username}}</h5>
        <div class='text-center mb-2'>
          <input
            type='text'
            name='token'
            class='form-control'
            value='{{token}}'
            placeholder='Password'
          />
        </div>
        <!-- User Name -->
        <h5 class='card-title mb-2'>Password</h5>
        <div class='text-center mb-2'>
          <input
            type='text'
            name='password'
            class='form-control'
            placeholder='Password'
          />
        </div>
        <!-- Email -->
        <h5 class='card-title mb-2'>RePassword</h5>
        <div class='text-center mb-2'>
          <input
            type='text'
            name='Repassword'
            class='form-control'
            placeholder='Repassword'
          />
        </div>
        <div class='text-center'>
          <input type='submit' value='Submit' class='btn btn-secondary' />
        </div>
      </div>
    </div>
  </div>
</form>