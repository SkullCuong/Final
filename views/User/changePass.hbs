<!-- ***** Header Area End ***** -->
<div class='main-banner' id='top' style='padding-bottom: 60px;'>
  <div class='container-fluid'>
    <div class='row justify-content-center'>
      <div class='col-md-4 col-xl-3'>
        <div class='card mb-2'>
          <div class='card-body text-center'>
            <h5 class='card-title mb-4'>Profile</h5>
            <img
              src='/images/{{user.image_url}}'
              class='assets/images-fluid rounded-circle mb-2'
              width='128'
              height='128'
            />
            <h3 class='mb-0'>{{user.name}}</h3>
            <div class='text-muted mb-0'>{{user.email}}</div>
            <div class='card-body'>
              <hr />
              <ul class='list-unstyled mb-0'>
                <li class='sidebar-item'>
                  <a class='profilebar-link active' href='/user/profile'>
                    <span class='align-middle'>Profile</span>
                  </a>
                </li>
                <li class='sidebar-item'>
                  <a
                    class='profilebar-link active'
                    href='/booking/order/{{user.id}}'
                  >
                    <span class='align-middle'>Manage Order</span>
                  </a>
                </li>
                <li class='sidebar-item'>
                  <a class='profilebar-link active' href='/user/image'>
                    <span class='align-middle'>Change Avatar</span>
                  </a>
                </li>
                <li class='sidebar-item'>
                  <a class='profilebar-link active' href='/user/password'>
                    <span class='align-middle'>Change Password</span>
                  </a>
                </li>
                <li class='sidebar-item'>
                  <a class='profilebar-link active' href='#'>
                    <span class='align-middle'>Logout</span>
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <div class='col-md-4 col-xl-5'>
        <form id='password' method='post'>
          <div class='row'>
            <div class='card'>
              <div class='card-header' style='background-color: white;'>
                <h3 class='mb-0 text-center'><strong>Change Password</strong></h3>
              </div>
              <div class='card-body'>
                <!-- id -->
                <div class='text-center mb-2'>
                  <input
                    type='text'
                    name='id'
                    class='form-control'
                    value='{{user.id}}'
                    hidden
                  />
                </div>
                <div class='text-center mb-2'>
                  <input
                    type='text'
                    name='email'
                    class='form-control'
                    value='{{user.email}}'
                    hidden
                  />
                </div>
                <!-- User Name -->
                <h5 class='card-title mb-2'>Password</h5>
                <div class='text-center mb-2'>
                  <input
                    type='password'
                    name='password'
                    class='form-control'
                    placeholder='Password'
                  />
                </div>
                <h5 class='card-title mb-2'>New Password</h5>
                <div class='text-center mb-2'>
                  <input
                    type='password'
                    name='newPassword'
                    class='form-control'
                    placeholder='New Password'
                  />
                </div>
                <h5 class='card-title mb-2'>Confirm New Password</h5>
                <div class='text-center mb-2'>
                  <input
                    type='password'
                    name='confirm'
                    class='form-control'
                    placeholder='Confirm Password'
                  />
                </div>
                <div
                  id='error-message'
                  style='color: red; display: none;'
                >Please fill out all fields before submitting the form.</div>
                <div class='text-center'>
                  <input
                    type='submit'
                    value='Update'
                    class='btn btn-secondary'
                  />
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script
  src='https://cdnjs.cloudflare.com/ajax/libs/axios/0.18.0/axios.min.js'
></script>
<script src='/assets/js/account/changePass.js'></script>