<div class='container'>
  <div class='row justify-content-center'>
    <div class='col-12 col-lg-6'>
      <form method='post'>
        <div class='row'>
          <div class='card'>
            <div class='card-header' style='background-color: white;'>
              <h3 class='mb-0 text-center'><strong>Change Password</strong></h3>
            </div>
            <div class='card-body'>

              <!-- id -->
              <div class='text-center mb-2'>
                <input
                  type='text'
                  name='id'
                  class='form-control'
                  placeholder='User Name'
                  value='{{id}}'
                  hidden
                />
              </div>
              <!-- User Name -->
              <h5 class='card-title mb-2'>Old Password</h5>
              <div class='text-center mb-2'>
                <input
                  type='password'
                  name='password'
                  class='form-control'
                  placeholder='password'
                />
              </div>
              <h5 class='card-title mb-2'>New Password</h5>
              <div class='text-center mb-2'>
                <input
                  type='password'
                  name='newPassword'
                  class='form-control'
                  placeholder='password'
                />
              </div>
              <h5 class='card-title mb-2'>Confirm Password</h5>
              <div class='text-center mb-2'>
                <input
                  type='password'
                  name='confirm'
                  class='form-control'
                  placeholder='password'
                />
              </div>

              <div class='text-center'>
                <input type='submit' value='Update' class='btn btn-secondary' />
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>