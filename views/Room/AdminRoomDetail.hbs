<!-- ***** Product Area Starts ***** -->
<section class='section' id='product' style='margin: 0;'>
  <div class='container'>
    <div class='row justify-content-center'>
      <div class='col-lg-5'>
        <div class='left-images'>
          <img src='/images/{{room.image_url}}' alt='' />
        </div>
      </div>
      <div class='col-lg-4'>
        <div class='right-content' style='background-color: #F5F7FB;'>
          <h4>{{room.name}}</h4>
          <span class='price'>${{room.price}}</span>
          <h4 style='margin-top: 30px; font-weight:bold;'>Type :
            {{room.type}}</h4>
          <div class='quote'>
            <h4 style='font-weight:bold;'>Room Floor : {{room.floor}}</h4>
          </div>
          <div class='quantity-content'>
            <div class='left-content'>
              <h6>Capacity : {{room.capacity}}</h6>
            </div>
            <div class='right-content' style='background-color: #F5F7FB;'>
              <div class='quantity buttons_added'>
                <p></p>
              </div>
            </div>
          </div>
          <div class='total'>
            <h4>Total: ${{room.price}}</h4>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>