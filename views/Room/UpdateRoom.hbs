<div class='container'>
  <div class='row justify-content-center'>
    <div class='col-12 col-lg-6'>
      <form method='post' enctype='multipart/form-data'>
        <div class='row'>
          <div class='card'>
            <div class='card-header'>
              <h2 class='mb-0 text-center'><strong>Room</strong></h2>
            </div>
            <div class='card-body'>
              <!-- Room Name -->
              <h5 class='card-title mb-2'>Room Name</h5>
              <div class='text-center mb-3'>
                <input
                  type='text'
                  name='name'
                  value='{{room.name}}'
                  class='form-control'
                  placeholder='Room Name'
                />
              </div>
              <!-- Room Type -->
              <h5 class='card-title mb-2'>Room Type</h5>
              <div class='text-center mb-3'>
                <input
                  type='text'
                  name='type'
                  value='{{room.type}}'
                  class='form-control'
                  placeholder='Room Type'
                />
              </div>
              <!-- Room Floor -->
              <h5 class='card-title mb-2'>Floor</h5>
              <div class='text-center mb-3'>
                <input
                  type='text'
                  name='floor'
                  value='{{room.floor}}'
                  class='form-control'
                  placeholder='Floor'
                />
              </div>
              <!-- Room Price -->
              <h5 class='card-title mb-2'>Price</h5>
              <div class='text-center mb-3'>
                <input
                  type='text'
                  name='price'
                  value='{{room.price}}'
                  class='form-control'
                  placeholder='Price'
                />
              </div>
              <!-- Room Capacity -->
              <h5 class='card-title mb-2'>Capacity</h5>
              <div class='text-center mb-3'>
                <input
                  type='text'
                  name='capacity'
                  value='{{room.capacity}}'
                  class='form-control'
                  placeholder='Capacity'
                />
              </div>
              <!-- Room Image -->
              <h5 class='card-title mb-2'>Choose a profile picture:</h5>
              <div class='text-center mb-3'>
                <input
                  type='file'
                  name='image'
                  class='form-control'
                  placeholder='Image'
                />
                <input
                  type='text'
                  name='oldimage'
                  value='{{room.image_url}}'
                  hidden
                /><br />
              </div>
              <div class='text-center'>
                <input type='submit' value='Submit' class='btn btn-secondary' />
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>