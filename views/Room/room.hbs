<!-- ***** Products Area Starts ***** -->
<section class='section' id='products' style='margin-top: 30px;'>
  <div class='container'>
    <div class='row'>
      <div class='col-lg-12'>
        <div class='section-heading'>
          <h2>Our Latest Products</h2>
        </div>
      </div>
    </div>
  </div>
  <div class='searchbar mb-3'>
    <form class='form-inline my-2 my-lg-0 justify-content-center'>
      <button
        class='btn btn-secondary dropdown-toggle mr-sm-3'
        type='button'
        id='dropdownMenuButton'
        data-toggle='dropdown'
        aria-haspopup='true'
        aria-expanded='false'
      >
        <i class='fa fa-filter' aria-hidden='true'></i>
      </button>
      <div class='dropdown-menu' aria-labelledby='dropdownMenuButton'>
        <a class='dropdown-item' href='?page={{currentPage}}&order=newest'>Newest</a>
        <a class='dropdown-item' href='?page={{currentPage}}&order=olded'>Olded</a>
        <a class='dropdown-item' href='?page={{currentPage}}&order=price'>Price</a>
         <a class='dropdown-item' href='?page={{currentPage}}&order=capacity'>capacity</a>
      </div>
      <input
        class='form-control mr-sm-3'
        type='search'
        name='search'
        placeholder='Search'
        aria-label='Search'
      />
      <button
        class='btn btn-outline-dark my-2 my-sm-0'
        style='padding: 10px 15px 10px 15px;'
        type='submit'
      >
        <i class='fa fa-search' aria-hidden='true'></i>
      </button>
    </form>
  </div>
  <div class='container'>
    <div class='row'>
      {{#each room}}
        <div class='col-lg-4'>
          <div class='item'>
            <div class='thumb'>
              <div class='hover-content'>
                <ul>
                  <li><a href='/room/detail/{{id}}'><i
                        class='fa fa-eye'
                      ></i></a></li>
                  <li><a href='/booking/book/{{id}}'><i
                        class='fa fa-shopping-cart'
                      ></i></a></li>
                </ul>
              </div>
              <img src='/images/{{image_url}}' alt='' />
            </div>
            <div class='down-content'>
              <h4>{{name}}</h4>
              <span>${{price}}</span>
              <span>Capacity: {{capacity}}</span>
            </div>
          </div>
        </div>
      {{/each}}
      <div class='col-lg-12'>
        <div class='pagination'>
          <ul>
          {{#each pagesArray}}
            <li {{#if (isCurrentPage ../currentPage this)}} class='active' {{/if}}>
              <a href='/room?page={{this}}'>{{this}}</a>
            </li>
          {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- ***** Products Area Ends ***** -->